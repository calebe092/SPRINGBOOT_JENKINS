pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'GIT', url: 'https://github.com/thiago-jv/SPRINGBOOT_JENKINS.git'
            }
        }
        stage('Build') {
            steps {
                dir('jenkins') {
                    sh 'apt-get update && apt-get install -y maven'
                    sh '/usr/share/maven/bin/mvn clean package'
                }
            }
        }
        stage('Deploy') {
            steps {
            dir('jenkins') {
                    sh 'docker compose up -d'
                }
            }
        }

    }
}